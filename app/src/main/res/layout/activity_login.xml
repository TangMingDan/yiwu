<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/bg_common_gray"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/login_titleBar_iv_back"
            style="@style/common_left_back_imageView_style"/>
        <TextView
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:text="登陆"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/login_in_register"
            style="@style/common_right_title_textView_style"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/orange"
            android:textSize="16sp"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/login_quick_login_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/login_phone"
                    style="@style/login_editText_style"
                    android:inputType="number"
                    android:maxLength="11"
                    android:hint="输入手机号码"/>
            </RelativeLayout>
            <View
                style="@style/me_horizontal_view_style"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/login_password"
                    style="@style/login_editText_style"
                    android:inputType="textPassword"
                    android:hint="请输入密码"/>
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/login_in_btn"
            style="@style/login_btn_style"/>

        <TextView
            android:id="@+id/login_in_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="15sp"
            android:layout_marginRight="10sp"
            android:drawableRight="@mipmap/yellow_arrow"
            android:drawablePadding="5dp"
            android:text="忘记密码"
            android:textColor="@color/orange"
            android:textSize="@dimen/size_14sp"/>
    </LinearLayout>
</LinearLayout>